<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RequestSupplierStep2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">
        <!-- Orientación vertical hace referencia al modo de visualización de los componentes
        dentro del layout-->

        <!-- La unidad de medida "dp" se utiliza en Android para hacer referencia a los
        padding y márgenes de un componente en Android. A diferencia de "sp", se utilizan
        para los textos-->

        <!-- wrap_content hace que sus atributos internos se ajusten a su contenido-->


        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:gravity="center"-->
        <!--        android:text="@string/label_login"-->
        <!--        android:paddingTop="30sp"-->
        <!--        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />-->

        <!-- Reemplaza "tu_logo" con el nombre de tu imagen de logo -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/container_background"
            android:orientation="horizontal"
            android:padding="2dp"> <!-- Utiliza el nuevo fondo personalizado -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_margin="4sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:progress="40"
                android:progressDrawable="@drawable/custom_progress_bar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Origen del proveedor"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"> <!-- Espacio agregado aquí -->

                <RadioButton
                    android:id="@+id/nacionalRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nacional" /> <!-- Espacio agregado aquí -->

                <RadioButton
                    android:id="@+id/extranjeroRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extranjero" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre del proveedor"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Correo electronico"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Calle / Numero"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Urbanizacion / AA.HH / Otros"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerPaises"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/spinnerDepartamentos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerDistritos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/spinnerDepartamentos2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

<!--                android:popupBackground="@color/colorBtnLogin"-->

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Condicion de pago"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"> <!-- Espacio agregado aquí -->

                <RadioButton
                    android:id="@+id/condPago1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Factura" /> <!-- Espacio agregado aquí -->

                <RadioButton
                    android:id="@+id/condPago2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boleta" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Via de pago"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"> <!-- Espacio agregado aquí -->

                <RadioButton
                    android:id="@+id/viaPago1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Transferencia Bancaria" /> <!-- Espacio agregado aquí -->

                <RadioButton
                    android:id="@+id/viaPago2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letras" />
            </RadioGroup>


            <!-- Botones "Anterior" y "Siguiente" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10sp">

                <Button
                    android:id="@+id/btnFormRequest1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/icon_before"
                    style="@style/ButtonForm2x1"
                    android:background="@color/cardview_shadow_start_color"
                    android:text="Anterior" />

                <Button
                    android:id="@+id/btnFormRequest2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/icon_next"
                    style="@style/ButtonForm2x1"
                    android:background="@color/colorBtnLogin"
                    android:text="Siguiente" />
            </LinearLayout>


            <!-- match_content hace que sus atributos internos se ajusten al ancho total del
            elemento padre-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
