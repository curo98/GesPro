<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp"
    tools:context=".ui.modules.request.FormRequestSupplierActivity"
    android:id="@+id/llFormStep2"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dirAdicNacional">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Urbanizacion / AA.HH / Otros"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDir2"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_width="match_parent" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Calle / Numero"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDir1"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Condicion de pago"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerCondPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>



    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:text="Via de pago"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgTipoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </RadioGroup>


    <!-- Botones "Anterior" y "Siguiente" -->
    <LinearLayout
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15sp">

        <Button
            style="@style/ButtonForm2x1"
            android:background="@color/cardview_shadow_start_color"
            android:drawableStart="@drawable/icon_before"
            android:id="@+id/btnPrevForm2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Anterior" />

        <Button
            style="@style/ButtonForm2x1"
            android:background="@color/colorBtnLogin"
            android:drawableEnd="@drawable/icon_next"
            android:id="@+id/btnNextFormRequest2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Siguiente" />
    </LinearLayout>


    <!-- match_parent hace que sus atributos internos se ajusten al ancho total del
    elemento padre-->
</LinearLayout>
