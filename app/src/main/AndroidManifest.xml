        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GesPro"
        tools:targetApi="31">

        <activity
            android:name=".ui.modules.SuccesfulRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.modules.state.StateRequestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.modules.requests.SupplierRequestsActivity"
            android:exported="false"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.modules.requests.FormRequestSupplierActivity"
            android:exported="false"
            android:parentActivityName=".ui.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.modules.supplier.SuppliersActivity"
            android:exported="false"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.modules.requests.RequestSupplierStep5Activity"
            android:exported="false" />
        <activity
            android:name=".ui.modules.requests.RequestSupplierStep4Activity"
            android:exported="false" />
        <activity
            android:name=".ui.modules.requests.RequestSupplierStep3Activity"
            android:exported="false" />
        <activity
            android:name=".ui.modules.requests.RequestSupplierStep2Activity"
            android:exported="false" />
        <activity
            android:name=".ui.modules.requests.RequestSupplierStep1Activity"
            android:exported="false" />
        <activity
            android:name=".ui.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ui.auth.MainActivity"
            android:exported="true"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TODO: Step 3.0 uncomment to start the service  -->
        <service
            android:name=".io.fcm.FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>